using UnityEngine;
using System.Collections;
using UnityEngine.UI;

public class Test : MonoBehaviour {

	public bool menu = true;
	public bool sound = false;

	public bool toggle1 = false;
	public bool toggle2 = false;
	public float switch1 = 0.0f;
	public float switch2 = 0.0f;
	public float switch3 = 0.0f;

	public float vSbarValue;

	void OnGUI() {
		if (menu) { 
			if (GUI.Button (new Rect (Screen.width/2 - 50, Screen.height/2, 100, 30), "Sound Settings")) {
				menu = false;
				sound = true;
			}
		}
		if(sound){
			vSbarValue = GUI.VerticalScrollbar(new Rect(Screen.width/2 + 100, Screen.height/2 - 75, 115, 150), vSbarValue, 1.0F, 10.0F, 0.0F);

			toggle1 = GUI.Toggle (new Rect(Screen.width/2 - 150, Screen.height/2 - 30, 100, 30), toggle1, " On.");
			toggle2 = GUI.Toggle (new Rect(Screen.width/2 - 150, Screen.height/2, 100, 30), toggle2, " On.");
			
			switch1 = GUI.HorizontalSlider (new Rect (Screen.width/2 - 50, Screen.height/2 - 50, 100, 30), (int)switch1, 0.0f, 100.0f);
			GUI.Label(new Rect(Screen.width/2 - 50 + 110, Screen.height/2 - 50, 100, 30), switch1 + "%");
			switch2 = GUI.HorizontalSlider (new Rect (Screen.width/2 - 50, Screen.height/2 - 20, 100, 30), (int)switch2, 0.0f, 100.0f);
			GUI.Label(new Rect(Screen.width/2 - 50 + 110, Screen.height/2 - 20, 100, 30), switch2 + "%");
			switch3 = GUI.HorizontalSlider (new Rect (Screen.width/2 - 50, Screen.height/2 + 10, 100, 30), (int)switch3, 0.0f, 100.0f);
			GUI.Label(new Rect(Screen.width/2 - 50 + 110, Screen.height/2 + 10, 100, 30), switch3 + "%");
			
			if (GUI.Button(new Rect(Screen.width/2 - 200, Screen.height/2 + 100, 115, 30), "Ok")){
				PlayerPrefs.Save ();
				sound = false;
				menu = true;
			}
			
			if (GUI.Button(new Rect(Screen.width/2 - 50, Screen.height/2 + 100, 115, 30), "Restore Defaults")){
				switch1 = 0;
				switch2 = 0;
				switch3 = 0;
				toggle1 = false;
				toggle2 = false;
			}
			
			if (GUI.Button(new Rect(Screen.width/2 + 100, Screen.height/2 + 100, 115, 30), "Cancel")){
				switch1 = 0;
				switch2 = 0;
				switch3 = 0;
				toggle1 = false;
				toggle2 = false;
				
				sound = false;
				menu = true;
			}
		}
	}
	
	// Use this for initialization
	void Start () {
	}
	
	// Update is called once per frame
	void Update () {
	
	}
}
